<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="MyTextView">

        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/withe</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--首页搜索框的样式-->
    <style name="title_edit_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <!--首页八个图标的样式-->
    <style name="first_eight_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_12</item>
    </style>
    <!--首页底部的样式-->
    <style name="first_bottom_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/size_12</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
</resources>

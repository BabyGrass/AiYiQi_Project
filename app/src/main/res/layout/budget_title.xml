<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <CheckedTextView
        android:id="@+id/title_backimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:drawableLeft="@drawable/btn_back_selecte" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckedTextView
                android:id="@+id/title_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="装修报价"
                android:textColor="@drawable/text_color"
                android:textSize="18dp" />

            <CheckedTextView
                android:id="@+id/title_budget"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的预算"
                android:textColor="@drawable/text_color"
                android:textSize="18dp" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true">
            <com.aiyiqi.aiyiqi_project.decorate_budget.LineView
                android:id="@+id/title_myViewLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <View
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/green"/>
            </com.aiyiqi.aiyiqi_project.decorate_budget.LineView>
        </FrameLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/icon_free_call"
        android:layout_alignTop="@+id/title_backimg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:id="@+id/title_phone" />

</RelativeLayout>
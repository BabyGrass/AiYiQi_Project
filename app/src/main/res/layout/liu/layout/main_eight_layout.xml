<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/decoration_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_package_new"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/decoration_company"
                android:textSize="@dimen/size_12"/>
            <TextView
                android:id="@+id/city_actiivty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_activity"
                android:gravity="center"
                android:text="@string/city_activity"
                android:textSize="@dimen/size_12"
                />
            <TextView
                android:id="@+id/decoration_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_school"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/decoration_school"
                android:textSize="@dimen/size_12"/>
            <TextView
                android:id="@+id/decroation_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_my_budget"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/decoration_budget"
                android:textSize="@dimen/size_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/catogray_feature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_category"
                android:drawablePadding="10dp"
                android:text="@string/building_materials_furniture"
                android:gravity="center"
                android:textSize="@dimen/size_12"/>
            <TextView
                android:id="@+id/xiaguo_iamge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_renderings_new"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/design_sketch"
                android:textSize="@dimen/size_12"/>
            <TextView
                android:id="@+id/own_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_self_order"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/self_service_order"
                android:textSize="@dimen/size_12"/>
            <TextView
                android:id="@+id/design_and_measure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home_feature_design_measure"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/design_volume"
                android:textSize="@dimen/size_12"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

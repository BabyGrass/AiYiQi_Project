<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/denglu_rl"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/main_bottom_green">
            <ImageView
                android:id="@+id/user_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/header_nor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击登陆"
                android:layout_toRightOf="@+id/user_iv"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_24"/>
            <TextView
                android:id="@+id/jifen_guize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/point"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="积分规则"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_tiezi_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_new_post"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="帖子"
                />
            <TextView
                android:id="@+id/mine_guanzhu_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_attention"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="关注"
                />
            <TextView
                android:id="@+id/mine_fensi_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_fan"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="粉丝"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/my_dingdan_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/my_order_new"
                android:padding="10dp"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:text="我的订单"
                android:textSize="@dimen/size_16"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/my_soucang_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/my_collect_new"
                android:padding="10dp"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:text="我的收藏"
                android:textSize="@dimen/size_16"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/my_love_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/msg_zan_flag"
                android:padding="10dp"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:text="我的喜欢"
                android:textSize="@dimen/size_16"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/my_shezhi_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/my_setting_new"
                android:padding="10dp"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:text="设置"
                android:textSize="@dimen/size_16"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/yijian_fankui_newpinlun_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/my_feedback_new"
                android:padding="10dp"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:text="意见反馈"
                android:textSize="@dimen/size_16"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

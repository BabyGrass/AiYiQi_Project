<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--头-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/authod_iamge_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@drawable/main_tab_my_normal"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/yezhu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="楼着爬"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size_12"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/yezhu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="楼着爬"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/gray"
                    android:padding="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/add_guanzhu_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/add_attention"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:text="加关注"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_bottom_green"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="@dimen/size_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tiezi_detail_fragment_nametv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="你好"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/size_16"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/one_luntan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/size_10"
                android:text="来自北京装修"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/time_manager_blue"
                />
            <TextView
                android:id="@+id/tiezi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="2017-01-09"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_12"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/zhongjian_tvandiv_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tiezi_detail_tags_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tiezi_detail_weixinfengxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/share_wechart"/>
            <ImageView
                android:id="@+id/tiezi_detail_weixinpyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/share_wechart_cycle"/>
            <ImageView
                android:id="@+id/tiezi_detail_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/share_qq"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tiezi_detail_jisun_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/school_banner"/>

    </LinearLayout>
</RelativeLayout>

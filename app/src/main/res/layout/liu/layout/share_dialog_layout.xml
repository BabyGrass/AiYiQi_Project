<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/share_dialog_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/logo_qq"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="QQ"
                android:textSize="@dimen/size_14"/>
            <TextView
                android:id="@+id/share_dialog_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/logo_wechat"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="微信好友"
                android:textSize="@dimen/size_14"/>
            <TextView
                android:id="@+id/share_dialog_wecharmoments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/logo_wechatmoments"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="朋友圈"
                android:textSize="@dimen/size_14"/>
            <TextView
                android:id="@+id/share_dialog_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/logo_qzone"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="QQ空间"
                android:textSize="@dimen/size_14"/>
            <TextView
                android:id="@+id/share_dialog_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/logo_sinaweibo"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="微博"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>
        <Button
            android:id="@+id/share_button_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>

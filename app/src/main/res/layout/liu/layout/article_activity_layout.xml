<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:padding="5dp">
            <TextView
                android:id="@+id/article_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/back_selector"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="文章详情"
                android:gravity="center"
                android:textSize="@dimen/size_18"
                android:textColor="@color/black"/>
        </RelativeLayout>
    <ScrollView
        android:id="@+id/article_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/bottom"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/article_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_18"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="题目"
                android:padding="5dp"
                />
            <LinearLayout
                android:id="@+id/article_detail_tags_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/article_detail_weixinfengxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/share_wechart"/>
                <ImageView
                    android:id="@+id/article_detail_weixinpyq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/share_wechart_cycle"/>
                <ImageView
                    android:id="@+id/article_detail_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/share_qq"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/article_detail_jisun_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/school_banner"/>
        </LinearLayout>
        </ScrollView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/article_pinglun_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/article_pinglun_edit"
            android:hint="输入评论"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/article_bottom_collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/article_collect_selector"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/article_bottom_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/article_share"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>

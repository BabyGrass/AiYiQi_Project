<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/zhungxiu_school_rl"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_school"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="装修学堂"
            android:textSize="@dimen/size_10"
            />
        <TextView
            android:id="@+id/school_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="说的话"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            android:singleLine="true"
            />
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/school_iamge"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/school_tezi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="19小时前"
            android:textSize="@dimen/size_14"
            />
        <TextView
            android:id="@+id/school_tezi_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/course_flag_browse"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="110"
            android:textSize="@dimen/size_10"/>
        <TextView
            android:id="@+id/school_tiezi_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/course_flag_comment"
            android:drawablePadding="5dp"
            android:text="2"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="@dimen/size_10"/>
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>

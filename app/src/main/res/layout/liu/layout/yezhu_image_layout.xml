<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/yezhu_tiezi_rl"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <!--头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/yezhu_iamge_head"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/main_tab_my_normal"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/yezhu_nameandtime_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/yezhu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼着爬"
                android:textSize="@dimen/size_12"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/yezhu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13小时前"
                android:padding="5dp"
                android:textSize="@dimen/size_10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/add_guanzhu_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/add_attention"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:text="加关注"
            android:textColor="@color/main_bottom_green"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="@dimen/size_12"/>
    </LinearLayout>
    <!--中间的TextView-->
        <LinearLayout
            android:id="@+id/yezhu_mdeium_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/yezhu_medium_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="螃蟹一家人的蜗居"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="@dimen/size_14"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/yezhu_medium_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <!--底部的-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yezhu_luntan_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more"
                android:drawablePadding="5dp"
                android:text="精选自北京装修论坛"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textColor="@color/enquiry_tab_selected"
                android:textSize="@dimen/size_10"/>
            <RelativeLayout
                android:id="@+id/yezhu_luntan_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/yezhu_tezi_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/course_flag_browse"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:text="110"
                    android:textSize="@dimen/size_10"/>
                <TextView
                    android:id="@+id/yezhu_tiezi_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/course_flag_comment"
                    android:drawablePadding="5dp"
                    android:text="2"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/size_10"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

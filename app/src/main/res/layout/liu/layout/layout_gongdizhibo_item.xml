<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/zx_listview_sdv1"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/zx_listview_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="朝阳区南沙滩小区"/>

            <TextView
                android:id="@+id/zx_listview_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="二室一厅一卫一厨"/>

        </LinearLayout>

    </RelativeLayout>

    <!--details : 人员详情-->
    <LinearLayout
        android:id="@+id/gdzb_ll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--动态添加view 展示人员头像，姓名，工作岗位-->

    </LinearLayout>

    <View
        android:id="@+id/view_h"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#EEF2F3"/>

    <TextView
        android:id="@+id/zx_tv_zhuangxiujindu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="装修进度"/>

    <HorizontalScrollView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/hsv_zx_zhuangxiujindu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/ll_zx_zhuangxiujindu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>

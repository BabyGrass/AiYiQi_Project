<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:id="@+id/search_top_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/zxing_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_title_scan"/>
        <EditText
            android:id="@+id/serch_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/home_search"
            android:background="@drawable/home_top_edit"
            android:padding="5dp"
            android:drawablePadding="6dp"
            android:hint="@string/search_hint"
            android:textColorHint="@color/white"
            android:focusable="false"
            android:textSize="@dimen/size_14"
            android:layout_weight="4"/>
        <LinearLayout
            android:id="@+id/city_search_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/search_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:gravity="center"
                style="@style/title_edit_style"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_title_location_flag"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

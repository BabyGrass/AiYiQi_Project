<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yezhu_fatie_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/yezhu_fatie_selector"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:text="发帖"
                android:textSize="@dimen/size_14"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/yezhu_shaidan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/yezhu_shaidan_selector"
                android:layout_marginLeft="20dp"
                android:drawablePadding="5dp"
                android:text="晒单"
                android:textSize="@dimen/size_14"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yezhu_riji_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/yezhu_riji_selector"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:text="日记"
                android:textSize="@dimen/size_14"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/yezhu_toushubiaoyan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/yezhu_toushubiaoyang_selector"
                android:layout_marginLeft="20dp"
                android:drawablePadding="5dp"
                android:text="投诉/表扬"
                android:textSize="@dimen/size_14"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

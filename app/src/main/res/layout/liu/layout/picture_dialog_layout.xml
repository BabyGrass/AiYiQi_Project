<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/carame_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/picture_dialog_shape"
            android:gravity="center"
            android:text="相机"
            android:textSize="@dimen/size_14"
            android:textColor="@android:color/holo_blue_dark"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/photo_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/picture_dialog_shape_two"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="相册"
            android:textSize="@dimen/size_14"
            android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:id="@+id/cancle_dialog_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/picture_dialog_shape_three"
            android:text="取消"
            android:textSize="@dimen/size_14"
            android:textColor="@android:color/holo_blue_dark"/>
    </LinearLayout>
</RelativeLayout>

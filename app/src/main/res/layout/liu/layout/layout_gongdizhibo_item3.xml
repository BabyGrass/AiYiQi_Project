<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_zhuangxiujindu_item"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_jindu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yiwancheng"
            android:text="已完成"
            android:textColor="@color/white"
            android:padding="6sp"/>

        <LinearLayout
            android:id="@+id/ll_dagou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_below="@+id/tv_title">



        <ImageView
            android:id="@+id/iv_dagou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/finish_icon"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"/>

            <View
                android:id="@+id/view_w"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#EEF2F3"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_jinduneirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开工"
            android:layout_below="@+id/ll_dagou"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>


</LinearLayout>

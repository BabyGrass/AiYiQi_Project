<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:padding="5dp">
        <TextView
            android:id="@+id/tiezi_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/back_selector"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="帖子详情"
            android:gravity="center"
            android:textSize="@dimen/size_18"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/tiezi_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_above="@+id/tiezi_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/tiezi_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.aiyiqi.aiyiqi_project.view.fragment.tiezidetailfragment.TieZiDetailFragment"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/tiezi_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/tiezi_back_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/article_pinglun_edit"
            android:hint="回帖"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/tiezi_bottom_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_zan_normol"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/tiezi_bottom_collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/article_collect_selector"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/tiezi_bottom_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/article_share"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--头-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/yezhu_jinghua_iamge_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/main_tab_my_normal"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/yezhu_jignhua_nameandtime_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/yezhu_jainghua_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼着爬"
                    android:textSize="@dimen/size_12"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/yezhu_jianghua_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13小时前"
                    android:padding="5dp"
                    android:textSize="@dimen/size_10"/>
            </LinearLayout>
        </LinearLayout>
        <!--中间的TextView-->
        <LinearLayout
            android:id="@+id/yezhu_jignhua_mdeium_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/yezhu_jignhua_medium_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="螃蟹一家人的蜗居"
                android:singleLine="true"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="@dimen/size_14"/>
            <LinearLayout
                android:id="@+id/yezhu_jignhua_button_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/yezhu_jinghua_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:textSize="@dimen/size_12"
                    android:text="老房装修"/>
                <TextView
                    android:id="@+id/yezhu_jinghua_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray"
                    android:visibility="gone"
                    android:textSize="@dimen/size_12"
                    android:text="老房装修"/>
                <TextView
                    android:id="@+id/yezhu_jinghua_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:textSize="@dimen/size_12"
                    android:text="老房装修"/>
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/yezhu_jinghua_medium_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <!--底部的-->
            <TextView
                android:id="@+id/yezhu_jinghua_luntan_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more"
                android:drawablePadding="5dp"
                android:text="精选自北京装修论坛"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textColor="@color/enquiry_tab_selected"
                android:textSize="@dimen/size_10"/>
            <RelativeLayout
                android:id="@+id/yezhu_jianghua_tiezi_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/yezhu_jignhua_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="19天前"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/size_14"/>
                <ImageView
                    android:id="@+id/yezhu_xihua_iamgview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_taochan_like"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/yezhu_jinghua_tezi_msg"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/yezhu_jinghua_tezi_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/course_flag_comment"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="110"
                    android:textSize="@dimen/size_10"/>
                <ImageView
                    android:id="@+id/yezhu_share_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_normal"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

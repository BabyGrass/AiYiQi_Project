<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/login_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:text="取消"
                android:layout_centerVertical="true"
                android:textSize="@dimen/size_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/size_18"
                android:layout_centerVertical="true"
                android:text="登陆/注册"
                android:padding="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray"/>
        <EditText
            android:id="@+id/uesr_name_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/phone_number"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@null"
            android:hint="请输入账号"
            android:textSize="@dimen/size_14"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/user_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/password"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:hint="6-20位字母，数字和符号"
                android:textSize="@dimen/size_14"/>
            <ImageView
                android:id="@+id/password_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/password_selector"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/msg_quick_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:text="短信快捷登陆"
                android:textSize="@dimen/size_14"/>
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:text="忘记密码？"
                android:textSize="@dimen/size_14"/>
        </RelativeLayout>
        <Button
            android:id="@+id/login_registor_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bottom_green"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="登陆/注册"
            android:textSize="@dimen/size_18"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
